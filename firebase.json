{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/posts/**", // <-- IMPORTANT: Catches any URL starting with /posts/
        "function": "renderPost"
      }
    ]
  }
}
